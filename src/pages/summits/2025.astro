---
/**
 * Climate Robotics Summit 2025 Archive Page
 * Features 4-day program with embedded videos, speakers, and sponsors.
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Section from '@/components/Section.astro';
import ProgramDay from '@/components/ProgramDay.astro';
import SpeakerCard from '@/components/SpeakerCard.astro';
import VideoCard from '@/components/VideoCard.astro';
import SponsorGrid from '@/components/SponsorGrid.astro';
import { 
  SUMMITS, 
  SUMMIT_2025_PROGRAM, 
  SUMMIT_2025_VIDEOS,
  SPEAKERS_2025, 
  SPONSORS_2025,
  getKeynoteSpeakers,
  getKeynoteVideos
} from '@/lib/summits-data';

const summit = SUMMITS['2025'];
const keynoteSpeakers = getKeynoteSpeakers('2025');
const keynoteVideos = getKeynoteVideos();

// Tab configuration
const tabs = [
  { id: 'program', label: 'Program', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
  { id: 'speakers', label: 'Speakers', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z' },
  { id: 'sponsors', label: 'Sponsors', icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  { id: 'watch', label: 'All Videos', icon: 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z' },
];
---

<BaseLayout 
  title={summit.name} 
  description={`Watch all sessions from the ${summit.name} - ${summit.stats?.sessions} sessions, ${summit.stats?.speakers} speakers from ${summit.stats?.countries} countries.`}
>
  {/* Hero Section */}
  <section class="relative py-20 md:py-32 overflow-hidden">
    {/* Background */}
    <div class="absolute inset-0 bg-gradient-to-br from-gray-800 via-gray-900 to-black"></div>
    
    {/* Decorative elements */}
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-10 right-10 w-64 h-64 bg-crn-blue/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 left-10 w-48 h-48 bg-crn-green/20 rounded-full blur-3xl"></div>
    </div>
    
    {/* Content */}
    <div class="relative container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        {/* Back Link */}
        <a href="/summits" class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-8 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          All Summits
        </a>
        
        {/* Badge */}
        <span class="inline-block px-4 py-2 bg-gray-700 text-gray-300 text-sm font-semibold uppercase tracking-wide rounded-full mb-6">
          Past Event â€¢ Watch Recordings
        </span>
        
        {/* Title */}
        <h1 class="text-4xl md:text-6xl font-heading font-bold text-white mb-4">
          {summit.name}
        </h1>
        
        {/* Date & Location */}
        <div class="flex flex-wrap justify-center gap-6 text-white/80 mb-8">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {summit.dates}
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            {summit.location}
          </span>
        </div>
        
        {/* Stats */}
        {summit.stats && (
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
            <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
              <span class="block text-3xl font-heading font-bold text-white">{summit.stats.attendees}</span>
              <span class="text-white/60 text-sm">Attendees</span>
            </div>
            <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
              <span class="block text-3xl font-heading font-bold text-white">{summit.stats.countries}</span>
              <span class="text-white/60 text-sm">Countries</span>
            </div>
            <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
              <span class="block text-3xl font-heading font-bold text-white">{summit.stats.sessions}</span>
              <span class="text-white/60 text-sm">Sessions</span>
            </div>
            <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
              <span class="block text-3xl font-heading font-bold text-white">{summit.stats.speakers}</span>
              <span class="text-white/60 text-sm">Speakers</span>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>
  
  {/* Tab Navigation */}
  <div class="sticky top-0 z-40 bg-white border-b border-gray-200 shadow-sm">
    <div class="container mx-auto px-4">
      <nav class="flex gap-1 overflow-x-auto scrollbar-hide py-2" aria-label="Summit sections">
        {tabs.map((tab, idx) => (
          <button
            class={`summit-tab flex items-center gap-2 px-6 py-3 font-semibold text-sm uppercase tracking-wide whitespace-nowrap rounded-lg transition-colors ${idx === 0 ? 'bg-crn-blue text-white' : 'text-gray-600 hover:bg-gray-100'}`}
            data-tab={tab.id}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tab.icon} />
            </svg>
            {tab.label}
          </button>
        ))}
      </nav>
    </div>
  </div>
  
  {/* Tab Content */}
  <div class="min-h-screen">
    {/* Program Tab */}
    <section id="tab-program" class="summit-tab-content py-16">
      <div class="container mx-auto px-4">
        <h2 class="section-title mb-4">4-Day Program</h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
          Click on any day to expand and watch the recorded sessions.
        </p>
        
        <div class="max-w-4xl mx-auto space-y-4">
          {SUMMIT_2025_PROGRAM.map((day, idx) => (
            <ProgramDay programDay={day} defaultOpen={idx === 0} />
          ))}
        </div>
      </div>
    </section>
    
    {/* Speakers Tab */}
    <section id="tab-speakers" class="summit-tab-content py-16 hidden">
      <div class="container mx-auto px-4">
        {/* Keynote Speakers */}
        <h2 class="section-title mb-4">Keynote Speakers</h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
          World-class experts who shared their insights at the summit.
        </p>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto mb-16">
          {keynoteSpeakers.map(speaker => (
            <SpeakerCard speaker={speaker} size="lg" />
          ))}
        </div>
        
        {/* All Speakers */}
        <h3 class="text-2xl font-heading font-semibold text-center mb-8">All Speakers</h3>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
          {SPEAKERS_2025.filter(s => !s.isKeynote).map(speaker => (
            <SpeakerCard speaker={speaker} size="sm" />
          ))}
        </div>
      </div>
    </section>
    
    {/* Sponsors Tab */}
    <section id="tab-sponsors" class="summit-tab-content py-16 hidden bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="section-title mb-4">Our Sponsors & Partners</h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
          Thank you to the organizations that made Summit 2025 possible.
        </p>
        
        <div class="max-w-5xl mx-auto">
          <SponsorGrid sponsors={SPONSORS_2025} />
        </div>
        
        {/* Become a Sponsor CTA */}
        <div class="text-center mt-16">
          <p class="text-gray-600 mb-4">Interested in sponsoring the next summit?</p>
          <a href="/summits/2026" class="inline-flex items-center gap-2 px-6 py-3 bg-crn-blue text-white font-semibold uppercase tracking-wider hover:bg-crn-blue-dark transition-colors rounded-lg">
            View 2026 Sponsorship Options
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>
    
    {/* All Videos Tab */}
    <section id="tab-watch" class="summit-tab-content py-16 hidden">
      <div class="container mx-auto px-4">
        <h2 class="section-title mb-4">All Summit Videos</h2>
        <p class="text-center text-gray-600 mb-8 max-w-2xl mx-auto">
          Browse all {SUMMIT_2025_VIDEOS.length} recorded sessions from the summit.
        </p>
        
        {/* Filter Tabs */}
        <div class="flex flex-wrap justify-center gap-2 mb-12">
          <button class="video-filter px-4 py-2 bg-crn-blue text-white text-sm font-semibold rounded-full" data-filter="all">
            All Videos
          </button>
          <button class="video-filter px-4 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-full hover:bg-gray-300" data-filter="keynote">
            Keynotes
          </button>
          <button class="video-filter px-4 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-full hover:bg-gray-300" data-filter="panel">
            Panels
          </button>
          <button class="video-filter px-4 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-full hover:bg-gray-300" data-filter="pitch">
            Pitches
          </button>
        </div>
        
        {/* Video Grid */}
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 max-w-7xl mx-auto" id="video-grid">
          {SUMMIT_2025_VIDEOS.sort((a, b) => a.day - b.day || a.order - b.order).map(video => (
            <div class="video-item" data-type={video.type}>
              <VideoCard video={video} />
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
  
  {/* YouTube Playlist CTA */}
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-heading font-bold text-white mb-4">
        Watch the Full Playlist on YouTube
      </h2>
      <p class="text-white/70 mb-8 max-w-xl mx-auto">
        Subscribe to our channel to get notified when new videos are uploaded.
      </p>
      <a 
        href="https://www.youtube.com/playlist?list=PLCSxuLa5A9VqMM74yg8URkhv03t-fsdht"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-3 px-8 py-4 bg-red-600 text-white font-semibold uppercase tracking-wider hover:bg-red-700 transition-colors rounded-lg"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        Watch on YouTube
      </a>
    </div>
  </section>
  
  {/* Next Summit CTA */}
  <section class="py-16 bg-crn-blue">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-heading font-bold text-white mb-4">
        Don't Miss the Next Summit!
      </h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Climate Robotics Summit 2026 is coming. Be the first to know when registration opens.
      </p>
      <a 
        href="/summits/2026"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-crn-blue font-semibold uppercase tracking-wider hover:bg-gray-100 transition-colors rounded-lg"
      >
        View Summit 2026
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<script>
  // Tab switching functionality
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.summit-tab');
    const contents = document.querySelectorAll('.summit-tab-content');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetId = tab.getAttribute('data-tab');
        
        // Update tab styles
        tabs.forEach(t => {
          t.classList.remove('bg-crn-blue', 'text-white');
          t.classList.add('text-gray-600', 'hover:bg-gray-100');
        });
        tab.classList.add('bg-crn-blue', 'text-white');
        tab.classList.remove('text-gray-600', 'hover:bg-gray-100');
        
        // Show/hide content
        contents.forEach(content => {
          if (content.id === `tab-${targetId}`) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
        
        // Scroll to content
        const targetContent = document.getElementById(`tab-${targetId}`);
        if (targetContent) {
          window.scrollTo({
            top: targetContent.offsetTop - 100,
            behavior: 'smooth'
          });
        }
      });
    });
    
    // Video filtering
    const filterBtns = document.querySelectorAll('.video-filter');
    const videoItems = document.querySelectorAll('.video-item');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');
        
        // Update button styles
        filterBtns.forEach(b => {
          b.classList.remove('bg-crn-blue', 'text-white');
          b.classList.add('bg-gray-200', 'text-gray-700');
        });
        btn.classList.add('bg-crn-blue', 'text-white');
        btn.classList.remove('bg-gray-200', 'text-gray-700');
        
        // Filter videos
        videoItems.forEach(item => {
          const type = item.getAttribute('data-type');
          if (filter === 'all' || type === filter) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });
    
    // Handle URL hash for direct tab navigation
    const hash = window.location.hash.replace('#', '');
    if (hash) {
      const targetTab = document.querySelector(`.summit-tab[data-tab="${hash}"]`) as HTMLElement;
      if (targetTab) targetTab.click();
    }
  });
</script>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

