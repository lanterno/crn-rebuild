---
import Header from '@/components/Header.astro';
import ClimateMap from '@/components/ClimateMap.astro';
import '@/styles/global.css';
import { SITE } from '@/lib/constants';
import { fetchClimateRoboticsData } from '@/lib/mapData';

// Fetch data at build time
const entries = await fetchClimateRoboticsData();
const currentPath = Astro.url.pathname;
const title = 'Global Map';
const description = 'Interactive map of 200+ climate robotics startups, companies and research programs worldwide.';
const fullTitle = `${title} | ${SITE.name}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    {/* SEO Meta Tags */}
    <meta name="robots" content="index, follow" />
    <meta name="author" content={SITE.name} />
    <link rel="canonical" href={`${SITE.url}${currentPath}`} />
    
    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={`${SITE.url}${currentPath}`} />
    <meta property="og:site_name" content={SITE.name} />
    <meta property="og:image" content={`${SITE.url}/images/og-image.png`} />
    
    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${SITE.url}/images/og-image.png`} />
    
    {/* Favicon */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/crn-logo.png" />
    
    {/* Theme Color */}
    <meta name="theme-color" content="#1e40af" />
    
    <title>{fullTitle}</title>
  </head>
  <body class="map-page">
    {/* Skip to main content link for accessibility */}
    <a href="#main-content" class="skip-link">
      Skip to main content
    </a>
    
    {/* Floating Header */}
    <div class="floating-header">
      <Header currentPath={currentPath} />
    </div>
    
    <main id="main-content" class="map-main" role="main">
      <ClimateMap entries={entries} />
    </main>
  </body>
</html>

<style>
  .map-page {
    margin: 0;
    padding: 0;
    overflow: hidden;
    height: 100vh;
    width: 100vw;
  }
  
  .floating-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }
  
  .map-main {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding-top: 72px; /* Height of header */
  }
  
  /* Override skip link for map page */
  :global(.skip-link) {
    position: absolute;
    left: -10000px;
    z-index: 10000;
  }
  
  :global(.skip-link:focus) {
    left: 10px;
    top: 80px;
  }
</style>
