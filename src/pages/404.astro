---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { SITE } from '@/lib/constants';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="min-h-[70vh] flex items-center justify-center py-20">
    <div class="container mx-auto px-4 text-center">
      {/* 404 Illustration */}
      <div class="mb-8">
        <div class="relative inline-block">
          {/* Large 404 */}
          <span class="text-[150px] md:text-[200px] font-heading font-bold text-gray-100 select-none">
            404
          </span>
          {/* Robot Icon */}
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-32 h-32 md:w-40 md:h-40 bg-crn-blue rounded-2xl flex items-center justify-center shadow-xl">
              <svg class="w-16 h-16 md:w-20 md:h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      
      {/* Message */}
      <h1 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">
        Page Not Found
      </h1>
      <p class="text-gray-600 text-lg mb-8 max-w-md mx-auto">
        Oops! The robot couldn't find the page you're looking for. It might have been moved or doesn't exist.
      </p>
      
      {/* Actions */}
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a 
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-crn-blue text-white font-semibold uppercase tracking-wider hover:bg-crn-blue-dark transition-colors rounded-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go Home
        </a>
        <button 
          onclick="history.back()"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 text-gray-700 font-semibold uppercase tracking-wider hover:bg-gray-200 transition-colors rounded-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Go Back
        </button>
      </div>
      
      {/* Helpful Links */}
      <div class="max-w-2xl mx-auto">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">
          Popular Pages
        </h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/research" class="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group">
            <svg class="w-6 h-6 text-crn-blue mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span class="text-sm font-medium text-gray-700 group-hover:text-crn-blue transition-colors">Research</span>
          </a>
          <a href="/summits" class="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group">
            <svg class="w-6 h-6 text-crn-blue mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            <span class="text-sm font-medium text-gray-700 group-hover:text-crn-blue transition-colors">Summits</span>
          </a>
          <a href="/map" class="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group">
            <svg class="w-6 h-6 text-crn-blue mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <span class="text-sm font-medium text-gray-700 group-hover:text-crn-blue transition-colors">Map</span>
          </a>
          <a href="/slack" class="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group">
            <svg class="w-6 h-6 text-crn-blue mb-2 mx-auto" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313z"/>
            </svg>
            <span class="text-sm font-medium text-gray-700 group-hover:text-crn-blue transition-colors">Join Slack</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

