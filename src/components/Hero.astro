---
interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
  imagePosition?: 'left' | 'right';
  dark?: boolean;
  fullWidth?: boolean;
}

const {
  title,
  subtitle,
  image,
  imageAlt = '',
  imagePosition = 'right',
  dark = false,
  fullWidth = false,
} = Astro.props;
---

<section class={`relative ${fullWidth ? '' : 'min-h-[500px]'}`}>
  <div class={`flex flex-col ${imagePosition === 'left' ? 'lg:flex-row-reverse' : 'lg:flex-row'}`}>
    <!-- Text Content -->
    <div
      class={`flex-1 flex items-center justify-center p-8 lg:p-16 ${dark ? 'bg-crn-navy text-white' : 'bg-white'}`}
    >
      <div class="max-w-lg text-center lg:text-left">
        {title && (
          <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold tracking-wide uppercase leading-tight mb-4">
            {title}
          </h1>
        )}
        {subtitle && (
          <p class="text-lg md:text-xl opacity-90 mb-8">
            {subtitle}
          </p>
        )}
        <slot />
      </div>
    </div>
    
    <!-- Image -->
    {image && (
      <div class="flex-1 min-h-[300px] lg:min-h-[500px]">
        <img
          src={image}
          alt={imageAlt}
          class="w-full h-full object-cover"
        />
      </div>
    )}
  </div>
</section>

