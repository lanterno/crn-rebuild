---
import { SITE, LINKS } from '@/lib/constants';

const currentYear = new Date().getFullYear();

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'Consulting', href: '/consulting' },
  { label: 'Research', href: '/research' },
  { label: 'Summits', href: '/summits' },
  { label: 'Map', href: '/map' },
  { label: 'Slack', href: '/slack' },
];

const resourceLinks = [
  { label: 'White Paper', href: LINKS.research.whitePaperGoogleDoc, external: true },
  { label: 'Global Map Data', href: LINKS.map.googleSpreadsheet, external: true },
  { label: 'Summit 2025 Videos', href: '/summits/2025' },
  { label: 'Sponsor Deck', href: LINKS.summit.sponsorDeck, external: true },
];
---

<footer class="bg-crn-navy text-white">
  {/* Main Footer Content */}
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      {/* Brand & Description */}
      <div class="lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-4">
          <img src="/images/crn-logo.png" alt="CRN Logo" class="h-10 w-10" />
          <span class="font-heading font-bold text-xl">{SITE.name}</span>
        </a>
        <p class="text-gray-400 text-sm mb-6">
          {SITE.description}
        </p>
        
        {/* Social Links */}
        <div class="flex items-center gap-4">
          <a 
            href={LINKS.social.linkedIn}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center hover:bg-crn-blue transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href={LINKS.social.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center hover:bg-red-600 transition-colors"
            aria-label="YouTube"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a 
            href={LINKS.slack.invite}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center hover:bg-[#4A154B] transition-colors"
            aria-label="Slack"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
            </svg>
          </a>
        </div>
      </div>
      
      {/* Navigation Links */}
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Navigation</h3>
        <ul class="space-y-3">
          {navLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      {/* Resources */}
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Resources</h3>
        <ul class="space-y-3">
          {resourceLinks.map(link => (
            <li>
              <a 
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-gray-400 hover:text-white transition-colors text-sm inline-flex items-center gap-1"
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      {/* Join CTA */}
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Join Our Community</h3>
        <p class="text-gray-400 text-sm mb-4">
          Connect with {SITE.stats.members} members across {SITE.stats.countries} countries working on climate robotics.
        </p>
        <a 
          href={LINKS.slack.invite}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-5 py-3 bg-crn-green text-white font-semibold text-sm uppercase tracking-wider hover:bg-crn-green-dark transition-colors rounded-lg"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313z"/>
          </svg>
          Join Slack
        </a>
        
        {/* Stats */}
        <div class="mt-6 grid grid-cols-3 gap-4 text-center">
          <div>
            <span class="block text-2xl font-heading font-bold text-white">{SITE.stats.members}</span>
            <span class="text-gray-500 text-xs uppercase tracking-wide">Members</span>
          </div>
          <div>
            <span class="block text-2xl font-heading font-bold text-white">{SITE.stats.countries}</span>
            <span class="text-gray-500 text-xs uppercase tracking-wide">Countries</span>
          </div>
          <div>
            <span class="block text-2xl font-heading font-bold text-white">{SITE.stats.sectors}</span>
            <span class="text-gray-500 text-xs uppercase tracking-wide">Sectors</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  {/* Bottom Bar */}
  <div class="border-t border-white/10">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          Â© {currentYear} {SITE.name}. All rights reserved.
        </p>
        
        <div class="flex items-center gap-6">
          <a href="/privacy" class="text-gray-500 hover:text-white text-sm transition-colors">
            Privacy Policy
          </a>
          <a href={LINKS.slack.codeOfConduct} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-white text-sm transition-colors">
            Code of Conduct
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
