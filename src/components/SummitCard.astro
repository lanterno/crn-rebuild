---
/**
 * SummitCard Component
 * Displays a summit card with year, dates, status badge, and link to details.
 */
import type { Summit } from '@/lib/summits-data';

interface Props {
  summit: Summit;
  featured?: boolean;
}

const { summit, featured = false } = Astro.props;

const statusColors = {
  upcoming: 'bg-crn-green text-white',
  past: 'bg-gray-500 text-white',
};

const cardClass = featured
  ? 'group relative overflow-hidden rounded-2xl shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-1'
  : 'group relative overflow-hidden rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1';
---

<a href={`/summits/${summit.year}`} class={cardClass}>
  {/* Background gradient */}
  <div class={`absolute inset-0 ${summit.status === 'upcoming' ? 'bg-gradient-to-br from-crn-blue via-crn-blue-dark to-crn-navy' : 'bg-gradient-to-br from-gray-700 via-gray-800 to-gray-900'}`}></div>
  
  {/* Decorative elements */}
  <div class="absolute top-0 right-0 w-40 h-40 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-32 h-32 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
  
  {/* Content */}
  <div class={`relative ${featured ? 'p-8 md:p-12' : 'p-6'}`}>
    {/* Status Badge */}
    <span class={`inline-block px-3 py-1 text-xs font-bold uppercase tracking-wider rounded-full ${statusColors[summit.status]} mb-4`}>
      {summit.status === 'upcoming' ? 'Upcoming' : 'Watch Recordings'}
    </span>
    
    {/* Year */}
    <div class={`font-heading font-bold text-white/20 ${featured ? 'text-8xl md:text-9xl' : 'text-6xl'} absolute top-4 right-4`}>
      {summit.year}
    </div>
    
    {/* Summit Name */}
    <h3 class={`font-heading font-bold text-white ${featured ? 'text-3xl md:text-4xl' : 'text-2xl'} mb-2`}>
      {summit.name}
    </h3>
    
    {/* Dates & Location */}
    <p class="text-white/80 mb-2">
      <svg class="inline-block w-4 h-4 mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      {summit.dates}
    </p>
    <p class="text-white/60 text-sm mb-4">
      <svg class="inline-block w-4 h-4 mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      {summit.location}
    </p>
    
    {/* Tagline */}
    <p class={`text-white/70 ${featured ? 'text-lg' : 'text-sm'} mb-6`}>
      {summit.tagline}
    </p>
    
    {/* Stats (for past summits) */}
    {summit.stats && (
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div>
          <span class="block text-2xl font-bold text-white">{summit.stats.attendees}</span>
          <span class="text-white/60 text-sm">Attendees</span>
        </div>
        <div>
          <span class="block text-2xl font-bold text-white">{summit.stats.sessions}</span>
          <span class="text-white/60 text-sm">Sessions</span>
        </div>
      </div>
    )}
    
    {/* CTA */}
    <div class="flex items-center text-white font-semibold group-hover:translate-x-2 transition-transform">
      {summit.status === 'upcoming' ? 'Learn More' : 'Watch Now'}
      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
</a>

