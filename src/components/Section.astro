---
interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
  titleClass?: string;
  dark?: boolean;
  centered?: boolean;
}

const {
  title,
  subtitle,
  class: className = '',
  titleClass = '',
  dark = false,
  centered = true,
} = Astro.props;
---

<section class={`py-16 md:py-24 ${dark ? 'bg-gray-100' : 'bg-white'} ${className}`}>
  <div class="container mx-auto px-4">
    {title && (
      <div class={`mb-12 ${centered ? 'text-center' : ''}`}>
        <h2 class={`section-title ${titleClass}`}>
          {title}
        </h2>
        {subtitle && (
          <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>

